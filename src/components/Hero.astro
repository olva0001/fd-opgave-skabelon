---
import Services from "./Services.astro";
---

<section class="hero">
  <div class="hero_main">
    <div class="hero_left">
      <h1>Empowering Your Business Growth</h1>
      <p>
        Discover tailored strategies and expert insights to take your business
        to the next level. Let us help you navigate challenges and achieve
        sustainable success.
      </p>
      <button>Book a Meeting</button>
    </div>
    <div class="hero_right"></div>
  </div>
  <Services />
</section>

<style>
  .hero {
    grid-column: 2;
    grid-row: 2;
    background-color: rgba(24, 24, 24, 1);
  }

  .hero_main {
    display: flex;
    flex-direction: row;
  }

  .hero_left {
    color: white;
    width: 50%;
    height: 40ch;
    margin-top: 2rem;
    margin-bottom: 6rem;
    padding: 2rem;

    h1 {
      font-size: var(--step-3);
      font-weight: 700;
      margin-bottom: 1rem;
    }

    p {
      font-size: var(--step--2);
      margin-bottom: 1rem;
    }
  }

  .hero_right {
    background-color: yellow;
    width: 50%;
  }

  button {
    width: fit-content;
    background-color: white;
    color: black;
    border-radius: 40px;
    padding: 0.75rem 1rem;
    align-items: center;
    text-align: center;
    margin-top: auto;
    margin-bottom: 1rem;
    width: fit-content;
  }
</style>
