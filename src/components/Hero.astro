---
import Services from "./Services.astro";
---

<section class="hero">
  <div class="hero_main">
    <div class="hero_left">
      <h1>Empowering Your Business Growth</h1>
      <p>
        Discover tailored strategies and expert insights to take your business
        to the next level. Let us help you navigate challenges and achieve
        sustainable success.
      </p>
      <button>Book a Meeting</button>
    </div>
    <div class="hero_right"></div>
  </div>
</section>
<Services class="services" />

<style>
  .services {
    grid-column: content;
  }

  .hero {
    grid-column: 1/-1;
    grid-template-columns: subgrid;
    display: grid;
    background-color: rgba(24, 24, 24, 1);
  }

  .hero_main {
    display: grid;
    grid-column: content;
  }

  .hero_left {
    grid-column: middle / -1;
    contain: size;
    grid-row: 1;
    color: white;
    width: 100%;
    height: 40ch;
    padding-top: 4rem;
    padding-bottom: 25rem;

    h1 {
      font-size: var(--step-3);
      font-weight: 700;
      margin-bottom: 1rem;
    }

    p {
      font-size: var(--step--2);
      margin-bottom: 1rem;
    }
  }

  .hero_right {
    grid-row: 1;
    grid-column: middle;
    background-color: yellow;
    width: 100%;
  }

  button {
    width: fit-content;
    background-color: white;
    color: black;
    border-radius: 40px;
    padding: 0.75rem 1rem;
    align-items: center;
    text-align: center;
    margin-top: auto;
    margin-bottom: 1rem;
    width: fit-content;
  }

  button:hover {
    background-color: black;
    color: white;
  }
</style>
